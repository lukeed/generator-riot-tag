{
  "name": "<%= tagName %>",
  "description": "<%= tagDesc %>",
  "version": "0.0.0", <% if (!usePublish) { %>
  "private": true,
  <% } %>"license": "MIT",
  "repository": "https://github.com/<%= uGithub %>/<%= tagName %>",
  "main": "<%= tagName %>.js",
  "files": [
    "*.js",
    "*.sass",
    "*.scss",
    "*.<%= tagExtn %>"
  ],
  "keywords":[
    "riot",
    "riotjs",
    "riot-tag",
    "<%= tagName %>"
  ],
  "scripts": {
    "test": "echo No tests specified.",
    "build": "riot --ext <%= tagExtn %>",
    "major": "npm version major && npm run push",
    "minor": "npm version minor && npm run push",
    "patch": "npm version patch && npm run push",
    "push": "git push origin master --follow-tags<% if (usePublish) { %> && npm publish <% } %>"
  },
  "author": {
    "name": "<%= uName %>",
    "email": "<%= uEmail %>",
    "url": "<%= uWebsite %>"
  },
  "dependencies": {
  },
  "devDependencies": {
  },
  "peerDependencies": {
    "riot": "2.x"
  },
  "engines": {
    "iojs": ">= 1.0.0",
    "node": ">= 0.12.0"
  }
}

<<%= tagName %>>
  <p onclick="{ onClick }">Hallo hallo!</p>

  <script>
    console.log('before `mount` event: ', this.root);

    onClick(e) {
      alert('clicked!');
    }

    this.on('mount', function () {
      console.log('mounted');
    }.bind(this));
  </script>

  <style scoped>
    /* declare SCSS variables! */
    $text-color : #003366;

    :scope {
      p { color: $text-color; }
    }
  </style>
</<%= tagName %>>
